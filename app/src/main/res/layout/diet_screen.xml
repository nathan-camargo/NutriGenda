<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.diet.DietScreen">

    <ImageView
        android:id="@+id/diet_logoImageView"
        android:layout_width="168dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="38dp"
        app:layout_constraintBottom_toTopOf="@+id/diet_weekLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/diet_weekLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_xbold_font"
        android:text="Dieta atual:"
        app:layout_constraintBottom_toTopOf="@+id/diet_breakfastButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diet_planLabel" />

    <Button
        android:id="@+id/diet_breakfastButton"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginBottom="17dp"
        android:backgroundTint="@color/orange"
        android:text="Café da Manhã"
        android:fontFamily="@font/poppins_regular_font"
        app:layout_constraintBottom_toTopOf="@+id/diet_snackButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diet_weekLabel" />

    <Button
        android:id="@+id/diet_snackButton"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/orange"
        android:text="Lanche"
        android:fontFamily="@font/poppins_regular_font"
        app:layout_constraintBottom_toTopOf="@+id/diet_lunchButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diet_breakfastButton" />

    <Button
        android:id="@+id/diet_lunchButton"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/orange"
        android:text="Almoço"
        android:fontFamily="@font/poppins_regular_font"
        app:layout_constraintBottom_toTopOf="@+id/diet_afternoonSnackButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diet_snackButton" />

    <Button
        android:id="@+id/diet_afternoonSnackButton"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/orange"
        android:text="Lanche da Tarde"
        android:fontFamily="@font/poppins_regular_font"
        app:layout_constraintBottom_toTopOf="@+id/diet_dinnerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diet_lunchButton" />

    <Button
        android:id="@+id/diet_dinnerButton"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginBottom="130dp"
        android:backgroundTint="@color/orange"
        android:text="Jantar"
        android:fontFamily="@font/poppins_regular_font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diet_afternoonSnackButton" />

    <TextView
        android:id="@+id/diet_planLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginTop="171dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="541dp"
        android:text="Seu plano de dieta:"
        android:fontFamily="@font/poppins_regular_font"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
