<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.user.UserChooseScreen">

    <ImageView
        android:id="@+id/nutriRegister_logoImageView"
        android:layout_width="232dp"
        android:layout_height="138dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="8dp" />

    <EditText
        android:id="@+id/nutriRegister_emailEditText"
        android:layout_width="211dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/rounded_edittext_border"
        android:ems="10"
        android:fontFamily="@font/poppins_regular_font"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nutriRegister_emailTextView" />

    <TextView
        android:id="@+id/nutriRegister_titleTextView"
        android:layout_width="210dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_xbold_font"
        android:text="Cadastro de Nutricionista"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nutriRegister_logoImageView" />

    <TextView
        android:id="@+id/nutriRegister_crnTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular_font"
        android:text="CRN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nutriRegister_emailEditText" />

    <TextView
        android:id="@+id/nutriRegister_yourNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="4dp"
        android:text="Seu nome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nutriRegister_titleTextView" />

    <EditText
        android:id="@+id/nutriRegister_passwordEditText"
        android:layout_width="211dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/rounded_edittext_border"
        android:ems="10"
        android:fontFamily="@font/poppins_regular_font"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nutriRegister_passwordTextView" />

    <EditText
        android:id="@+id/nutriRegister_nameEditText"
        android:layout_width="211dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/rounded_edittext_border"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nutriRegister_yourNameTextView" />

    <TextView
        android:id="@+id/nutriRegister_passwordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_regular_font"
        android:text="Senha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nutriRegister_nameEditText" />

    <EditText
        android:id="@+id/nutriRegister_crnEditText"
        android:layout_width="211dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/rounded_edittext_border"
        android:ems="10"
        android:fontFamily="@font/poppins_regular_font"
        android:inputType="text"
        android:padding="10dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nutriRegister_crnTextView" />

    <TextView
        android:id="@+id/nutriRegister_emailTextView"
        android:layout_width="58dp"
        android:layout_height="24dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_regular_font"
        android:text="E-mail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nutriRegister_passwordEditText" />

    <Button
        android:id="@+id/nutriRegister_registerButton"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/poppins_xbold_font"
        android:text="Registrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nutriRegister_crnEditText" />

    <Button
        android:id="@+id/nutriRegister_alreadyAccountButton"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginStart="92dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/poppins_xbold_font"
        android:text="JÃ¡ tenho uma conta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nutriRegister_registerButton" />


</androidx.constraintlayout.widget.ConstraintLayout>
